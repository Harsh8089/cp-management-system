generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String          @id
  name      String
  email     String?         @unique
  rating    Int?
  rank      String?
  maxRating Int?
  maxRank   String?
  createdAt DateTime
  contests  ContestResult[]
  problems  Problem[]
}

model ContestResult {
  id               Int       @id
  name             String
  rank             Int
  oldRating        Int
  newRating        Int
  unsolvedProblems Int?
  date             DateTime
  problems         Problem[]
  userId           String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Problem {
  id          Int      @id
  name        String
  rating      Int?
  tags        String[]
  submittedAt DateTime
  userId      String
  contestId   Int?

  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  contest ContestResult? @relation(fields: [contestId], references: [id], onDelete: Cascade)
}
