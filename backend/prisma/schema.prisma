generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String          @id
  name      String
  email     String?         @unique
  rating    Int?
  rank      String?
  maxRating Int?
  maxRank   String?
  createdAt DateTime
  contests  ContestResult[]
  problems  Problem[]
}

model ContestResult {
  contestId        String   @id
  name             String
  rank             Int
  oldRating        Int
  newRating        Int
  unsolvedProblems Int?
  date             DateTime
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Problem {
  id          String   @id @default(uuid())
  name        String
  rating      Int?
  tags        String[]
  submittedAt DateTime
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
